  <include>./main/layouts/${system.theme}.xml</include>
  <!-- Layout when help is disabled -->
  <include ifHelpPrompts="false">./main/layouts/nohelp.xml</include>
  <!-- Layout for small screens -->
  <subset tinyScreen="true" name="optimizesmallscreens" displayName="${optimizesmallscreensSubsetName}">
    <include name="yes" displayName="${yes}">./main/layouts/gpicase.xml</include>
    <include name="no" displayName="${no}"/>
  </subset>
  <!-- Subset options for grid views -->
  <subset name="videoboxes" displayName="${videoboxesSubsetName}" appliesTo="Boxes,grid">
    <include name="no" displayName="${no}"/>
    <include name="yes" displayName="${yes}">./main/grid/videoboxes.xml</include>
  </subset>
  <subset name="zoomboxes" displayName="${zoomboxesSubsetName}" appliesTo="Boxes,grid">
    <include name="no" displayName="${no}"/>
    <include name="yes" displayName="${yes}">./main/grid/zoomboxes.xml</include>
  </subset>
  <subset name="scrolldirection" displayName="Orientation" appliesTo="Tiles,Boxes,grid">
    <include name="vertical"/>
    <include name="horizontal">./main/grid/scrollhorz.xml</include>
  </subset>
  <subset name="hideselection" displayName="${hideselectionSubsetName}" appliesTo="Boxes,grid">
    <include name="no" displayName="${no}"/>
    <include name="yes" displayName="${yes}">./main/grid/hidesel.xml</include>
  </subset>
  <subset name="previewbar" displayName="${previewBarSubsetName}" appliesTo="Tiles,Carousel,Boxes,grid">
    <include name="no" displayName="${no}"/>
    <include name="yes" displayName="${yes}">./main/grid/previewbar.xml</include>
  </subset>
  <!-- Subset options for Tiles view -->
  <subset tinyScreen="false" name="tileborders" displayName="${roundBorderSubsetName}" appliesTo="Tiles">
    <include name="yes" displayName="${yes}"/>
    <include name="no" displayName="${no}">./main/tiles/squareborders.xml</include>
  </subset>
  <subset name="blinkborders" displayName="${blinkBorderSubsetName}" appliesTo="Tiles,Carousel,Boxes,grid">
    <include name="yes" displayName="${yes}"/>
    <include name="no" displayName="${no}">./main/grid/blinkbordersoff.xml</include>
  </subset>
  <subset name="videotiles" displayName="Videos" appliesTo="Tiles">
    <include name="yes" displayName="${yes}"/>
    <include name="no" displayName="${no}">./main/tiles/novideo.xml</include>
  </subset>
  <subset name="marqueetiles" displayName="Logos" appliesTo="Tiles">
    <include name="yes" displayName="${yes}">./main/tiles/marquee.xml</include>
    <include name="no" displayName="${no}"/>
  </subset>
  <subset name="storyboards" displayName="${animationsSubsetName}">
    <include name="yes" displayName="${yes}">./storyboards.xml</include>
    <include name="no" displayName="${no}"/>
  </subset> 
    <subset name="logoColor" displayName="${logoColor}">
        <include name="off" displayName="${no}"/>
        <include name="on" displayName="${yes}"/>
   </subset>
    <subset name="hotkeytips" displayName="${hotkeytips}">
        <include name="on" displayName="${yes}"/>
        <include name="off" displayName="${no}"/>
   </subset>
    <subset name="gameVideosAudio" displayName="${gameVideosAudio}">
        <include name="on" displayName="${yes}"/>
        <include name="off" displayName="${no}"/>
   </subset>
    <subset name="randomVideosAudio" displayName="${randomVideosAudio}">
        <include name="off" displayName="${no}"/>
        <include name="on" displayName="${yes}"/>
