    <include name="3 mini random videos">./main/systemsbk/3smallvideos.xml</include>
    <include name="mini random video">./main/systemsbk/smallvideo.xml</include>
    <include tinyScreen="false" name="mini-consoles">./main/systemsbk/consoles.xml</include>
    <!-- change default for small screens -->
    <include name="consoles">./main/systemsbk/batomachines.xml</include>
    <include tinyScreen="true" name="mini-consoles">./main/systemsbk/consoles.xml</include>
    <include name="random video">./main/systemsbk/video.xml</include>
