<!--NICKNAMES-->
  <subset name="system-username" displayName="${theme.username}">
  	<include name="custom" displayName="${custom}">./custom-username.xml</include>
  	<include name="cheevos" displayName="Retroachievements ID">./main/usernames/cheevos.xml</include>
  	<include name="netplay" displayName="Netplay ID">./main/usernames/netplay.xml</include>
  </subset> 

<!--ASPECT RATIO (auto detection)-->
  <subset name="aspect-ratio" displayName="${theme.aspect-ratio}">
    <include if="{screen.ratio} == '16/9'" name="16-9" displayName="16:9 (${theme.detected})" />
    <include if="{screen.ratio} == '5/3'" name="5-3" displayName="5:3 (${theme.detected})" />
    <include if="{screen.ratio} == '4/3'" name="4-3" displayName="4:3 (${theme.detected})" />
    <include if="{screen.ratio} == '3/2'" name="3-2" displayName="3:2 (${theme.detected})" />
    <include if="{screen.ratio} == '5/4'" name="5-4" displayName="5:4 (${theme.detected})">./main/aspect-ratio/5-4.xml</include>
    <include if="{screen.ratio} == '21/9'" name="21-9" displayName="21:9 (${theme.detected})" />
    <include if="{screen.ratio} == '16/10'" name="16-10" displayName="16:10 (${theme.detected})">./main/aspect-ratio/16-10.xml</include>
  </subset>

  <!--NOT DETECTED ASPECT RATIO (All options) -->
  <subset name="aspect-ratio" displayName="${theme.aspect-ratio}">
    <include name="16-9" displayName="16:9 Widescreen" />
    <include name="4-3" displayName="4:3 Fullscreen" />
    <include name="16-10" displayName="16:10 PC Widescreen" />
    <include name="21-9" displayName="21:9 Ultrawide" />
    <include name="5-4" displayName="5:4 SXGA" />  
    <include name="3-2" displayName="3:2 Classic" />
    <include name="5-3" displayName="5:3 Europe Widescreen" />
  </subset>

<!-- Subset options for icons  -->
  <subset name="iconset" displayName="${subset.iconset}">
      <include name="XBOX" displayName="${XBOX}">./main/iconsets/xbox.xml</include>
      <include name="XBOX-color" displayName="${XBOX-color}">./main/iconsets/xbox-color.xml</include>
      <include name="XBOX-color 2" displayName="${XBOX-color 2}">./main/iconsets/xbox-color-2.xml</include>
  </subset>
 
  <!-- Subset option for System view background -->
  <subset name="systembackground" displayName="${systemBackgroundName}">
    <include name="3 mini random videos">./main/systemsbk/3smallvideos.xml</include>
    <include name="mini random video">./main/systemsbk/smallvideo.xml</include>
    <include tinyScreen="false" name="mini-consoles">./main/systemsbk/consoles.xml</include>
    <!-- change default for small screens -->
    <include name="consoles">./main/systemsbk/batomachines.xml</include>
    <include tinyScreen="true" name="mini-consoles">./main/systemsbk/consoles.xml</include>
    <include name="random video">./main/systemsbk/video.xml</include>
    <include name="random image">./main/systemsbk/image.xml</include>
    <include name="random box">./main/systemsbk/box.xml</include>
    <include name="mini random image">./main/systemsbk/smallscreen.xml</include>
    <include name="mini random box">./main/systemsbk/smallbox.xml</include>
  </subset>
  <!-- Subset options for screen -->
  <subset name="shader" displayName="${subset.shader}">
    <include name="None" displayName="${none}"/>
    <include name="ScanLines">./main/shader/scanlines.xml</include>
    <include name="Crt">./main/shader/crt.xml</include>
  </subset>
  <!-- Specific layout for systems -->
  <include>./main/layouts/${system.theme}.xml</include>
  <!-- Layout when help is disabled -->
  <include ifHelpPrompts="false">./main/layouts/nohelp.xml</include>
  <!-- Layout for small screens -->
  <subset tinyScreen="true" name="optimizesmallscreens" displayName="${optimizesmallscreensSubsetName}">
    <include name="yes" displayName="${yes}">./main/layouts/gpicase.xml</include>
    <include name="no" displayName="${no}"/>
  </subset>
  <!-- Subset options for grid views -->
  <subset name="videoboxes" displayName="${videoboxesSubsetName}" appliesTo="Boxes,grid">
    <include name="no" displayName="${no}"/>
    <include name="yes" displayName="${yes}">./main/grid/videoboxes.xml</include>
  </subset>
  <subset name="zoomboxes" displayName="${zoomboxesSubsetName}" appliesTo="Boxes,grid">
    <include name="no" displayName="${no}"/>
    <include name="yes" displayName="${yes}">./main/grid/zoomboxes.xml</include>
  </subset>
  <subset name="scrolldirection" displayName="Orientation" appliesTo="Tiles,Boxes,grid">
    <include name="vertical"/>
    <include name="horizontal">./main/grid/scrollhorz.xml</include>
  </subset>
  <subset name="hideselection" displayName="${hideselectionSubsetName}" appliesTo="Boxes,grid">
    <include name="no" displayName="${no}"/>
    <include name="yes" displayName="${yes}">./main/grid/hidesel.xml</include>
  </subset>
  <subset name="previewbar" displayName="${previewBarSubsetName}" appliesTo="Tiles,Carousel,Boxes,grid">
    <include name="no" displayName="${no}"/>
    <include name="yes" displayName="${yes}">./main/grid/previewbar.xml</include>
  </subset>
  <!-- Subset options for Tiles view -->
  <subset tinyScreen="false" name="tileborders" displayName="${roundBorderSubsetName}" appliesTo="Tiles">
    <include name="yes" displayName="${yes}"/>
    <include name="no" displayName="${no}">./main/tiles/squareborders.xml</include>
  </subset>
  <subset name="blinkborders" displayName="${blinkBorderSubsetName}" appliesTo="Tiles,Carousel,Boxes,grid">
    <include name="yes" displayName="${yes}"/>
    <include name="no" displayName="${no}">./main/grid/blinkbordersoff.xml</include>
  </subset>
  <subset name="videotiles" displayName="Videos" appliesTo="Tiles">
    <include name="yes" displayName="${yes}"/>
    <include name="no" displayName="${no}">./main/tiles/novideo.xml</include>
  </subset>
  <subset name="marqueetiles" displayName="Logos" appliesTo="Tiles">
    <include name="yes" displayName="${yes}">./main/tiles/marquee.xml</include>
    <include name="no" displayName="${no}"/>
  </subset>
  <subset name="storyboards" displayName="${animationsSubsetName}">
    <include name="yes" displayName="${yes}">./storyboards.xml</include>
    <include name="no" displayName="${no}"/>
  </subset> 
    <subset name="roundAvatar" displayName="${roundAvatar}">
        <include name="on" displayName="${yes}"/>
        <include name="off" displayName="${no}"/>
   </subset>
    <subset name="hotkeytips" displayName="${hotkeytips}">
        <include name="on" displayName="${yes}"/>
        <include name="off" displayName="${no}"/>
   </subset>
    <subset name="gameVideosAudio" displayName="${gameVideosAudio}">
        <include name="on" displayName="${yes}"/>
        <include name="off" displayName="${no}"/>
   </subset>
    <subset name="randomVideosAudio" displayName="${randomVideosAudio}">
        <include name="off" displayName="${no}"/>
        <include name="on" displayName="${yes}"/>
   </subset>
</theme>
