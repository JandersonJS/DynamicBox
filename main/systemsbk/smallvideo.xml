<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <include>./animatedbackgroundsubset.xml</include>
  <view name="system">
    <video name="videobox" extra="static" ifSubset="randomVideosAudio:on">
      <default>./main/video/no-video.mp4</default>
      <size>0.216 0.198</size>
      <path>{random}</path>
      <zIndex>21</zIndex>     
      <origin>0 0</origin>
      <pos>0.763 0.700</pos>
      <delay>0</delay>
      <color>FFFFFFFF</color>
      <effect>bump</effect>
      <roundCorners>0.02</roundCorners>
      <audio>true</audio>
      <visible>true</visible>
    </video>

    <video name="videobox" extra="static" ifSubset="randomVideosAudio:off">
      <default>./main/video/no-video.mp4</default>
      <size>0.216 0.198</size>
      <path>{random}</path>
      <zIndex>21</zIndex>     
      <origin>0 0</origin>
      <pos>0.763 0.700</pos>
      <delay>0</delay>
      <color>FFFFFFFF</color>
      <effect>bump</effect>
      <roundCorners>0.02</roundCorners>
      <audio>false</audio>
      <visible>true</visible>
    </video>
  </view>
</theme>
