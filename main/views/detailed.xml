<?xml version="1.0" encoding="UTF-8"?>
<theme defaultView="Tiles">
  <formatVersion>7</formatVersion>
  <view name="detailed">
        <video name="md_video" ifSubset="gameVideosAudio:on">
            <origin>0.5 0.5</origin>
            <pos>0.55 0.39</pos>
            <minSize>0.3 0.3</minSize>
            <delay>0.08</delay>
            <effect>none</effect>
            <zIndex>37</zIndex>
        </video>

        <video name="md_video" ifSubset="gameVideosAudio:off">
            <origin>0.5 0.5</origin>
            <pos>0.55 0.39</pos>
            <minSize>0.3 0.3</minSize>
            <delay>0.08</delay>
            <effect>none</effect>
            <audio>false</audio>
            <zIndex>37</zIndex>
        </video>

        <image name="md_image">
            <default>./main/media/novideo.png</default>
            <origin>0.5 0.5</origin>
            <pos>0.55 0.39</pos>
            <minSize>0.3 0.3</minSize>
            <zIndex>36</zIndex>
        </image>

        <image name="md_thumbnail">
             <origin>0.5 0.5</origin>
             <pos>0.420 0.49</pos>
             <maxSize>0.09 0.19</maxSize>
             <zIndex>38</zIndex>
        </image>

        <image name="md_marquee">
             <origin>0.5 0.5</origin>
             <pos>0.665 0.53</pos>
             <maxSize>0.12 0.12</maxSize>
             <zIndex>38</zIndex>
        </image>

        <image name="back-gamelist" extra="static">
            <pos>0.01 0.215</pos>
            <size>0.35 0.667</size>
            <path>./main/media/band.svg</path>
            <color>00000080</color>
            <zIndex>35</zIndex>
        </image>

        <text name="md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
            <alignment>left</alignment>
            <fontPath>./main/fonts/Cabin-Bold.ttf</fontPath>
            <fontSize>0.02</fontSize>
            <size>0.11 0.03</size>
        </text>

        <text name="md_releasedate, md_developer, md_publisher, md_genre, md_players, md_lastplayed, md_playcount, md_favorite">
            <alignment>left</alignment>
            <fontPath>./main/fonts/Cabin-Bold.ttf</fontPath>
            <fontSize>0.02</fontSize>
            <size>0.12 0.02</size>
        </text>

        <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite, md_description">
            <color>FFFFFF</color>
        </text>

        <text name="md_releasedate, md_lastplayed, md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite">
            <color>FFFFFF</color>
        </text>

        <image name="back-image" extra="static">
            <pos>0.37 0.215</pos>
            <size>0.36 0.385</size>
            <path>./main/media/band.svg</path>
            <color>00000080</color>
            <zIndex>35</zIndex>
        </image>

        <text name="md_lbl_rating">
            <pos>0.76 0.556</pos>
            <forceUppercase>1</forceUppercase>
            <fontPath>./main/fonts/Cabin-Bold.ttf</fontPath>
            <fontSize>0.018</fontSize>
            <size>0.15 0.02</size>
        </text>

        <rating name="md_rating">
            <pos>0.865 0.55</pos>
            <size>0.05 0.03</size>
            <color>ff9900</color>
            <unfilledColor>FFFFFF</unfilledColor>
        </rating>

        <image name="md_flag">
            <origin>0 0</origin>
            <pos>0.39 0.855</pos>
			<maxSize>0.025 0.018</maxSize>
            <zIndex>150</zIndex>
        </image>

        <image name="back-information" extra="static">
            <pos>0.74 0.215</pos>
            <size>0.25 0.385</size>
            <path>./main/media/band.svg</path>
            <color>00000080</color>
            <zIndex>35</zIndex>
        </image>

        <text name="md_lbl_releasedate">
            <forceUppercase>1</forceUppercase>
            <pos>0.76 0.23</pos>
        </text>

        <datetime name="md_releasedate">
            <forceUppercase>1</forceUppercase>
            <pos>0.865 0.235</pos>
        </datetime>

        <text name="md_lbl_developer">
            <pos>0.76 0.27</pos>
        </text>

        <text name="md_developer">
            <pos>0.865 0.275</pos>
        </text>

        <text name="md_lbl_publisher">
            <pos>0.76 0.31</pos>
        </text>

        <text name="md_publisher">
            <pos>0.865 0.315</pos>
        </text>

        <text name="md_lbl_genre">
            <pos>0.76 0.35</pos>
        </text>

        <text name="md_genre">
            <pos>0.865 0.355</pos>
            <autoScroll>horizontal</autoScroll>
            <autoScrollDelay>0</autoScrollDelay>
        </text>

        <text name="md_lbl_players">
            <pos>0.76 0.39</pos>
        </text>

        <text name="md_players">
            <pos>0.865 0.395</pos>
        </text>

        <text name="md_lbl_lastplayed">
            <pos>0.76 0.47</pos>
        </text>

        <datetime name="md_lastplayed">
            <pos>0.865 0.475</pos>
        </datetime>

        <text name="md_lbl_playcount">
            <pos>0.76 0.43</pos>
        </text>

        <text name="md_playcount">
            <pos>0.865 0.435</pos>
        </text>

        <text name="md_lbl_favorite">
            <pos>0.76 0.51</pos>
        </text>

        <text name="md_favorite">
            <pos>0.865 0.515</pos>
        </text>

        <image name="back-description" extra="static">
            <pos>0.37 0.62</pos>
            <size>0.62 0.261</size>
            <path>./main/media/band.svg</path>
            <color>00000080</color>
            <zIndex>35</zIndex>
        </image>

        <text name="md_description">
            <pos>0.39 0.64</pos>
            <size>0.57 0.20</size>
            <lineSpacing>1.5</lineSpacing>
            <fontSize>0.023</fontSize>
            <fontPath>./main/fonts/Cabin-Bold.ttf</fontPath>
        </text>

        <image name="back-name" extra="static">
            <pos>0.01 0.895</pos>
            <size>0.98 0.04</size>
            <path>./main/media/band.svg</path>
            <color>00000080</color>
            <zIndex>35</zIndex>
        </image>

        <text name="game-path" extra="true">
            <pos>0.01 0.895</pos>
            <size>0.98 0.04</size>
            <text>{game:rom}</text>
            <color>ffffff</color>
            <fontPath>./main/fonts/Cabin-Bold.ttf</fontPath>
            <fontSize>0.028</fontSize>
            <padding>0.007 0</padding>
            <autoScroll>horizontal</autoScroll>
            <zIndex>36</zIndex>
        </text>

        <textlist name="gamelist">
            <pos>0.015 0.25</pos>
            <size>0.34 0.60</size>
            <selectorColor>${baseColor}</selectorColor> <!-- Selection bar -->
            <selectedColor>262626</selectedColor> <!-- Selection letters -->
            <selectorGradientType>vertical</selectorGradientType>
            <primaryColor>ffffff</primaryColor> <!-- Letters -->
            <secondaryColor>9F9F9F</secondaryColor>
            <fontPath>./main/fonts/Cabin-Bold.ttf</fontPath>
            <fontSize>0.025</fontSize>
            <alignment>left</alignment>
            <horizontalMargin>0.01</horizontalMargin>
            <scrollSound>./main/sounds/scroll-2.wav</scrollSound>
            <scrollbarColor>${baseColor}</scrollbarColor>
            <scrollbarCorner>0.49</scrollbarCorner>
            <scrollbarSize>0.0055</scrollbarSize>
            <scrollbarAlignment>outerright</scrollbarAlignment>
            <lines>15</lines>
            <horizontalMargin>0.005</horizontalMargin>
            <zIndex>36</zIndex>
        </textlist>

        <image name="md_hidden">
            <path>./main/media/hidden.svg</path>
            <pos>0.89 0.86</pos>
            <maxSize>0.02 0.03</maxSize>
            <origin>0.5 0.5</origin>
            <color>FFFFFF</color>
            <zIndex>150</zIndex>
        </image>

        <image name="md_kidgame">
            <path>./main/media/kid.svg</path>
            <pos>0.91 0.86</pos>
            <maxSize>0.02 0.03</maxSize>
            <origin>0.5 0.5</origin>
            <color>FFFFFF</color>
            <zIndex>150</zIndex>
        </image>

        <image name="md_savestate, md_nosavestate">
            <path>./main/icons/SaveState.png</path>
            <pos>0.93 0.86</pos>
            <maxSize>0.02 0.03</maxSize>
            <pos ifCheevos="false">0.0225 0.766</pos>
            <origin>0.5 0.5</origin>
            <color>D0D0D0D0</color>
            <zIndex>150</zIndex>
        </image>
        
        <image name="md_nosavestate">
            <color>80808030</color>
            <zIndex>150</zIndex>
        </image>
    
        <image name="md_cheevos, md_notcheevos">
            <path>./main/icons/Contest.png</path>
            <pos>0.95 0.86</pos>
            <maxSize>0.02 0.03</maxSize>
            <origin>0.5 0.5</origin>
            <color>D0D0D0D0</color>
            <zIndex>150</zIndex>
        </image>
        
        <image name="md_notcheevos">
            <color>80808030</color>
            <zIndex>150</zIndex>
        </image>

        <image name="md_manual, md_nomanual">
            <path>./main/media/book.png</path>
            <pos>0.97 0.86</pos>
            <maxSize>0.02 0.03</maxSize>
            <origin>0.5 0.5</origin>
            <color>FFFFFF</color>
            <zIndex>150</zIndex>
        </image>

        <image name="md_nomanual">
            <color>80808025</color>
            <zIndex>150</zIndex>
        </image>
  </view>
</theme>
