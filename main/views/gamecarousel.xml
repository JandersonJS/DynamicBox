<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <view name="gamecarousel" displayName="${gameCarouselViewName}">
        <gamecarousel name="gamecarousel">
          <type>vertical_wheel</type>
          <pos>0 0.212</pos>
          <size>0.52 0.73</size>
          <logoScale>3.5</logoScale>
          <logoSize>0.15 0.15</logoSize>
          <logoAlignment>top</logoAlignment>
          <maxLogoCount>10</maxLogoCount>
          <imageSource>marquee</imageSource>
          <!-- text, image, thumbnail, marquee -->
          <zIndex>36</zIndex>
        </gamecarousel>

        <image name="gamecarouselLogo">
          <linearSmooth>true</linearSmooth>
          <shader>:/shaders/shadow.glsl</shader>
        </image>

        <text name="gamecarouselLogoText">
          <color>FFFFFFFF</color>
          <glowColor>000000FF</glowColor>
          <glowSize>4</glowSize>
          <lineSpacing>1.0</lineSpacing>
        </text>

        <control name="gamecarouselLogo,gamecarouselLogoText">
          <storyboard event="activate">
            <animation property="opacity" to="1" duration="150" mode="EaseOut"/>
            <animation property="offsetY" to="-0.19" begin="1400" duration="450" mode="bump"/>
          </storyboard>
          <storyboard event="scroll">
            <animation property="opacity" to="0.5" duration="150" mode="EaseOut"/>
            <animation property="opacity" to="0" begin="1400" duration="600" mode="EaseOut"/>
            <animation property="offsetY" to="0" duration="100" mode="EaseOut"/>
          </storyboard>
          <storyboard event="deactivate">
            <animation property="opacity" to="0.5" duration="150" mode="EaseOut"/>
            <animation property="opacity" to="0" begin="1400" duration="600" mode="EaseOut"/>
            <animation property="offsetY" to="0" duration="100" mode="EaseOut"/>
          </storyboard>
        </control>

        <video name="md_video" ifSubset="gameVideosAudio:on">
          <pos>0.76 0.430</pos>
          <maxSize>0.46 0.436</maxSize>
          <origin>0.5 0.5</origin>
          <delay>1.4</delay>
          <showSnapshotNoVideo>true</showSnapshotNoVideo>
          <showSnapshotDelay>true</showSnapshotDelay>
          <effect>size</effect>
          <zIndex>36</zIndex>
          <shader>
            <path>:/shaders/border.glsl</path>
            <cornerRadius>0.03</cornerRadius>
            <borderSize>0.012</borderSize>
            <borderColor>${gradientEndColor}</borderColor>
            <innerShadowSize>0.01</innerShadowSize>
            <innerShadowColor>00000030</innerShadowColor>
            <outerShadowSize>0.020</outerShadowSize>
            <outerShadowColor>00000050</outerShadowColor>
          </shader>
        </video>

        <video name="md_video" ifSubset="gameVideosAudio:off">
          <pos>0.76 0.430</pos>
          <maxSize>0.46 0.436</maxSize>
          <origin>0.5 0.5</origin>
          <delay>1.4</delay>
          <showSnapshotNoVideo>true</showSnapshotNoVideo>
          <showSnapshotDelay>true</showSnapshotDelay>
          <effect>size</effect>
          <zIndex>36</zIndex>
          <audio>false</audio>
          <shader>
            <path>:/shaders/border.glsl</path>
            <cornerRadius>0.03</cornerRadius>
            <borderSize>0.012</borderSize>
            <borderColor>${gradientEndColor}</borderColor>
            <innerShadowSize>0.01</innerShadowSize>
            <innerShadowColor>00000030</innerShadowColor>
            <outerShadowSize>0.020</outerShadowSize>
            <outerShadowColor>00000050</outerShadowColor>
          </shader>
        </video>

        <image name="md_thumbnail">
          <pos>0.25 0.72</pos>
          <maxSize>0.40 0.35</maxSize>
          <origin>0.5 0.5</origin>
          <color>FFFFFFFF</color>
          <gradientType>horizontal</gradientType>
          <linearSmooth>true</linearSmooth>
          <zIndex>36</zIndex>
          <opacity>0</opacity>
          <scale>0</scale>
          <shader>
            <path>:/shaders/border.glsl</path>
            <cornerRadius>0.03</cornerRadius>
            <borderSize>1</borderSize>
            <borderColor>00000090</borderColor>
            <innerShadowSize>0</innerShadowSize>
            <outerShadowSize>0.022</outerShadowSize>
            <outerShadowColor>00000050</outerShadowColor>
          </shader>
          <storyboard event="activate">
            <animation property="opacity" begin="1400" from="0" to="1" duration="400" mode="EaseOut"/>
            <animation property="scale" begin="1400" from="0" to="1" duration="400" mode="bump"/>
          </storyboard>
        </image>

        <image name="detailsBk" extra="true">
          <path>./main/media/band.svg</path>
          <color>00000080</color>
          <gradientType>horizontal</gradientType>
          <origin>0 0</origin>
          <pos>0.53 0.212</pos>
          <size>0.47 0.73</size>
          <zIndex>35</zIndex>
        </image>

        <image name="detailsBar" extra="true">
          <path>./main/media/band.svg</path>
          <pos>0.53 0.212</pos>
          <size>0.004 0.73</size>      
          <origin>0 0</origin>
          <color>${bottomBarColor}</color>
          <zIndex>36</zIndex>
          <linearSmooth>true</linearSmooth>
          <tile>false</tile>
        </image>

        <text name="md_genre, md_developer, md_publisher, md_lastplayed, md_releasedate, md_players, md_lbl_developer, md_lbl_publisher, md_lbl_lastplayed, md_lbl_playcount, md_lbl_players, md_lbl_releasedate">
          <storyboard>
            <animation property="opacity" from="0" duration="350" mode="easeOut"/>
          </storyboard>
        </text>

        <text name="md_lbl_developer, md_lbl_publisher, md_lbl_lastplayed, md_lbl_playcount, md_lbl_players, md_lbl_releasedate">
          <color>EFEFFF</color>
          <forceUppercase>0</forceUppercase>
          <fontPath>./main/fonts/Cabin-Regular.ttf</fontPath>
          <fontSize>0.023</fontSize>
        </text>

        <text name="md_genre, md_developer, md_publisher, md_lastplayed, md_releasedate, md_players">
          <color>EFEFFF</color>
          <forceUppercase>0</forceUppercase>
          <fontPath>./main/fonts/Cabin-Bold.ttf</fontPath>
          <fontSize>0.023</fontSize>
        </text>

        <text name="md_genre">
          <pos>0.735 0.635</pos>
        </text>

        <text name="md_lbl_rating, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate, md_lbl_genre, md_lbl_developer">
          <pos>1 1</pos>
        </text>

        <datetime name="md_lastplayed">
          <pos>1 1</pos>
        </datetime>

        <image name="md_flag">
          <origin>0 0.5</origin>
          <pos>0.55 0.9</pos>
          <maxSize>0.02 0.05</maxSize>
          <linearSmooth>true</linearSmooth>
          <zIndex>36</zIndex>
        </image>

        <text name="md_developer">
          <color>EFEFFF</color>
          <pos>0.578 0.875</pos>
          <size>0.30 0.05</size>
          <alignment>left</alignment>
          <fontSize>0.025</fontSize>
          <zIndex>36</zIndex>
        </text>

        <rating name="md_rating">
          <pos>0.94 0.886</pos>
          <size>0.05 0.03</size>
          <size verticalScreen="true">0.05 0.02</size>
          <horizontalAlignment>right</horizontalAlignment>
          <color>FFFF00</color>
          <unfilledColor>808080</unfilledColor>
          <unfilledPath>:/star_filled.svg</unfilledPath>
          <zIndex>36</zIndex>
        </rating>

        <text name="md_lbl_players">
          <color>EFEFFF</color>
          <pos>0.9 0.645</pos>
          <pos verticalScreen="true">0.85 0.645</pos>
          <size>0.09 0</size>
          <zIndex>36</zIndex>
        </text>

        <text name="md_players">
          <color>EFEFFF</color>
          <pos>0.965 0.645</pos>
          <size>0.02 0</size>
          <zIndex>36</zIndex>
        </text>

        <text name="md_lbl_releasedate">
          <color>EFEFFF</color>
          <pos>0.55 0.645</pos>
          <size>0.2 0</size>
          <zIndex>36</zIndex>
        </text>

        <datetime name="md_releasedate">
          <color>EFEFFF</color>
          <pos>0.645 0.645</pos>
          <pos verticalScreen="true">0.7 0.645</pos>
          <size>0 0.033</size>
          <zIndex>36</zIndex>
        </datetime>

        <text name="md_description">
          <pos>0.55 0.7</pos>
          <size>0.43 0.16</size>
          <color>EFEFFF</color>
          <forceUppercase>0</forceUppercase>
          <fontPath>./main/fonts/Cabin-Regular.ttf</fontPath>
          <fontSize>0.023</fontSize>
          <glowColor>000000A0</glowColor>
          <glowSize>1</glowSize>
          <zIndex>36</zIndex>
        </text>

        <image name="md_hidden">
            <path>./main/media/hidden.svg</path>
            <pos>0.80 0.9</pos>
            <maxSize>0.02 0.03</maxSize>
            <origin>0.5 0.5</origin>
            <color>969696</color>
            <zIndex>150</zIndex>
        </image>

        <image name="md_kidgame">
            <path>./main/media/kid.svg</path>
            <pos>0.82 0.9</pos>
            <maxSize>0.02 0.03</maxSize>
            <origin>0.5 0.5</origin>
            <color>969696</color>
            <zIndex>150</zIndex>
        </image>

        <image name="md_savestate, md_nosavestate">
            <path>./main/icons/SaveState.png</path>
            <pos>0.84 0.9</pos>
            <maxSize>0.02 0.03</maxSize>
            <pos ifCheevos="false">0.0225 0.766</pos>
            <origin>0.5 0.5</origin>
            <color>D0D0D0D0</color>
            <zIndex>150</zIndex>
        </image>
        
        <image name="md_nosavestate">
            <color>80808030</color>
            <zIndex>150</zIndex>
        </image>
    
        <image name="md_cheevos, md_notcheevos">
            <path>./main/icons/Contest.png</path>
            <pos>0.86 0.9</pos>
            <maxSize>0.02 0.03</maxSize>
            <origin>0.5 0.5</origin>
            <color>D0D0D0D0</color>
            <zIndex>150</zIndex>
        </image>
        
        <image name="md_notcheevos">
            <color>80808030</color>
            <zIndex>150</zIndex>
        </image>

        <image name="md_manual, md_nomanual">
            <path>./main/media/book.png</path>
            <pos>0.88 0.9</pos>
            <maxSize>0.02 0.03</maxSize>
            <origin>0.5 0.5</origin>
            <color>969696</color>
            <zIndex>150</zIndex>
        </image>

        <image name="md_nomanual">
            <color>80808025</color>
            <zIndex>150</zIndex>
        </image>
  </view>
</theme>
