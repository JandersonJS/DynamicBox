<?xml version="1.0" encoding="UTF-8"?>
<theme defaultView="Tiles">
  <formatVersion>7</formatVersion>
  <view name="screen">

        <text name="clock" extra="static">
          <color>ffffff</color>
          <glowColor>00000035</glowColor>
          <glowSize>1</glowSize>
          <glowOffset>3 2</glowOffset>
          <fontSize>0.035</fontSize>
          <pos>0.89 0.04</pos>
          <size>0.09 0.058</size>
          <alignment>right</alignment>
          <verticalAlignment>center</verticalAlignment>
        </text>

        <controllerActivity name="controllerActivity">
          <pos>0.365 0.025</pos>
          <size>0.08 0.036</size>
          <itemSpacing>0.015</itemSpacing>
          <color>FFFFFF</color>
          <!-- controllers -->
          <imagePath>./main/media/controller.png</imagePath>
          <gunPath>./main/media/gun.svg</gunPath>
          <activityColor>A0A0FFC0</activityColor>
          <hotkeyColor>FFA0A0C0</hotkeyColor>
        </controllerActivity>

        <batteryIndicator name="batteryIndicator">
          <pos>0.905 0.05</pos>
          <size>0.035 0.035</size>
          <horizontalAlignment>right</horizontalAlignment>
          <incharge>./main/battery/incharge.svg</incharge>
          <full>./main/battery/full.svg</full>
          <at75>./main/battery/75.svg</at75>
          <at50>./main/battery/50.svg</at50>
          <at25>./main/battery/25.svg</at25>
          <empty>./main/battery/empty.svg</empty>
          <color>FFFFFF</color>
        </batteryIndicator>

        <batteryIndicator name="batteryIndicator" tinyScreen="true">
          <pos>0.885 0.05</pos>
          <origin>0 0</origin>
          <size>0.030 0.040</size>
        </batteryIndicator>

