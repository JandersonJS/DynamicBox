<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <variables>
    <baseColor>8b0000</baseColor>
    <gradientEndColor>6b2020</gradientEndColor>
    <backgroundColor>252525</backgroundColor>
    <centerFadeColor>8b000050</centerFadeColor>
  </variables>
  <subset name="colorset" displayName="${subset.colorset}">
	<include subset="colorset" name="Original" displayName="${Original}">./main/colors/Original.xml</include>
	<include subset="colorset" name="Halo" displayName="${Halo}">./main/colors/Halo.xml</include>
	<include subset="colorset" name="Halo Courage" displayName="${Halo Courage}">./main/colors/Halo Courage.xml</include>
	<include subset="colorset" name="Waves" displayName="${Waves}">./Waves.xml</include>
	<include subset="colorset" name="Waves Faded" displayName="${Waves Faded}">./main/colors/Waves Faded.xml</include>
	<include subset="colorset" name="Wasteland" displayName="${Wasteland}">./main/colors/Wasteland.xml</include>
	<include subset="colorset" name="Game Room" displayName="${Game Room}">./main/colors/Game Room.xml</include>
	<include subset="colorset" name="Mercury" displayName="${Mercury}">./main/colors/Mercury.xml</include>
	<include subset="colorset" name="Spotlight Midnight" displayName="${Spotlight Midnight}">./main/colors/Spotlight Midnight.xml</include>
	<include subset="colorset" name="Spotlight Deja Goo" displayName="${Spotlight Deja Goo}">./main/colors/Spotlight Deja Goo.xml</include>
	<include subset="colorset" name="Spotlight Ultraviolet" displayName="${Spotlight Ultraviolet}">./main/colors/Spotlight Ultraviolet.xml</include>
	<include subset="colorset" name="Motes" displayName="${Motes}">./main/colors/Motes.xml</include>
	<include subset="colorset" name="Sunset" displayName="${Sunset}">./main/colors/Sunset.xml</include>
	<include subset="colorset" name="Ripple" displayName="${Ripple}">./main/colors/Ripple.xml</include>
  </subset>
	<view name="splash">

		<splash name="splash">
			<backgroundColor>000000FF</backgroundColor>
		</splash>
		<image name="background">
			<path>./main/media/splash.jpg</path>
			<size>1 1</size>
		</image>
		<image name="logo" extra="true">
			<pos>0.140 0.270</pos>
			<path>./main/media/splash_batocera.svg</path>
			<size>0 0.25</size>
			<alignment>left</alignment>
		</image>
		
		<text name="label, DynamicBox" extra="true">
			<origin>0 0</origin>
			<fontPath>./main/fonts/XboxOriginalBold-YzPYy.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<color>000000</color>
			<forceUppercase>true</forceUppercase>
		</text>


		<text name="DynamicBox" extra="true">
			<pos>0.367 0.239</pos>
			<fontPath>./main/fonts/XboxOriginalBold-YzPYy.ttf</fontPath>
			<fontSize>0.090</fontSize>
			<alignment>left</alignment>
			<text>DynamicBox</text>
		</text>
		<text name="PLUS" extra="true">
			<pos>0.600 0.300</pos>
			<fontPath>./main/fonts/XboxOriginalBold-YzPYy.ttf</fontPath>
			<fontSize>0.090</fontSize>
			<alignment>right</alignment>
			<color>89CFF0</color>
			<text>PLUS</text>
		</text>
		<text name="Version" extra="true">
			<pos>0.800 0.350</pos>
			<fontPath>./main/fonts/XboxOriginalBold-YzPYy.ttf</fontPath>
			<fontSize>0.050</fontSize>
			<alignment>right</alignment>
			<color>${baseColor}</color>
			<text>1.0</text>
		</text>

    <image name="progressbar">
      <origin>0 0</origin>
      <pos>0.25 0.87</pos>
      <size>0.5 0.036</size>
      <color>6060607F</color>
      <colorEnd>6060607F</colorEnd>
      <roundCorners>0.01</roundCorners>
    </image>
    <image name="progressbar:active">
      <tile>true</tile>
      <path>./main/media/progress.png</path>
      <color>${baseColor}</color>
      <colorEnd>${gradientEndColor}</colorEnd>
    </image>
		
	</view>
	
</theme>
